{
  "name": "goodvibes-hooks",
  "version": "1.0.0",
  "description": "Hook scripts for GoodVibes plugin",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && node scripts/bundle.js", "build:tsc": "tsc", "build:bundle": "node scripts/bundle.js",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache",
    "lint:quiet": "eslint . --cache --quiet",
    "lint:strict": "eslint . --cache --max-warnings 500",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --cache --format json --output-file eslint-report.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint:strict && npm run format:check && npm test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.6.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  }
}
