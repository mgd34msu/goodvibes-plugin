{
  "SessionStart": [
    {
      "matcher": "*",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/session-start.js\"",
          "timeout": 10
        }
      ]
    }
  ],
  "PreToolUse": [
    {
      "matcher": "mcp__goodvibes-tools__detect_stack",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/pre-tool-use.js\" detect_stack",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__get_schema",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/pre-tool-use.js\" get_schema",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__run_smoke_test",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/pre-tool-use.js\" run_smoke_test",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__check_types",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/pre-tool-use.js\" check_types",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__validate_implementation",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/pre-tool-use.js\" validate_implementation",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__*",
      "hooks": [
        {
          "type": "command",
          "command": "echo '{\"decision\": \"allow\"}'",
          "timeout": 3
        }
      ]
    }
  ],
  "PostToolUse": [
    {
      "matcher": "mcp__goodvibes-tools__detect_stack",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/post-tool-use.js\" detect_stack",
          "timeout": 10
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__recommend_skills",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/post-tool-use.js\" recommend_skills",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__search_*",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/post-tool-use.js\" search",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__validate_implementation",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/post-tool-use.js\" validate_implementation",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__run_smoke_test",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/post-tool-use.js\" run_smoke_test",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__check_types",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/post-tool-use.js\" check_types",
          "timeout": 5
        }
      ]
    },
    {
      "matcher": "mcp__goodvibes-tools__*",
      "hooks": [
        {
          "type": "command",
          "command": "echo '{\"continue\": true}'",
          "timeout": 3
        }
      ]
    }
  ],
  "Stop": [
    {
      "matcher": "*",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/stop.js\"",
          "timeout": 10
        }
      ]
    }
  ],
  "Notification": [
    {
      "matcher": "*",
      "hooks": [
        {
          "type": "command",
          "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/dist/notification.js\"",
          "timeout": 5
        }
      ]
    }
  ]
}
